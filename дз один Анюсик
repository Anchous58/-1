print ("введите длину длинного бортика")
n= int(input())
print ("введите длину короткого бортика")
m= int(input())
print ("введите известное расстояние человека до длинного бортика")
x= int(input())
print ("введите известное расстояние человека до короткого бортика")
y= int(input())

a = n - y
b = m - x

if x <= b
   x <= a
   x <= y:
  print (x)
  print ("- Сааамое минимальное расстояние")
else: 
   if y <= a
      y <= b
      y <= x:
  print (y) 
  print (" - Сааамое минимальное расстояние") 

else:
   if a <= b
      a <= x
      a <= y:
    print (a)
    print ("- Сааамое минимальное расстояние")

else: 
   if b <= a
      b <= x
      b <= y:
    print(b)
    print("- СААААмое минимальное расстояниe")

